<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stars_activity_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffccddee"
    tools:context="com.activities.StarsPatternActivity">

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="@string/stars_page_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/stars_image_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="#ddeeff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tvn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/n1"
            app:layout_constraintEnd_toEndOf="@+id/layout_n1"
            app:layout_constraintStart_toStartOf="@+id/layout_n1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n2"
            app:layout_constraintBottom_toTopOf="@+id/layout_n2"
            app:layout_constraintEnd_toEndOf="@+id/layout_n2"
            app:layout_constraintStart_toStartOf="@+id/layout_n2" />

        <TextView
            android:id="@+id/tvn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n3"
            app:layout_constraintBottom_toTopOf="@+id/layout_n3"
            app:layout_constraintEnd_toEndOf="@+id/layout_n3"
            app:layout_constraintStart_toStartOf="@+id/layout_n3" />

        <TextView
            android:id="@+id/tvda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/angle"
            app:layout_constraintBottom_toTopOf="@+id/layout_angle"
            app:layout_constraintEnd_toEndOf="@+id/layout_angle"
            app:layout_constraintStart_toStartOf="@+id/layout_angle" />

        <TextView
            android:id="@+id/tvsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shrink"
            app:layout_constraintBottom_toTopOf="@+id/layout_shrink"
            app:layout_constraintEnd_toEndOf="@+id/layout_shrink"
            app:layout_constraintStart_toStartOf="@+id/layout_shrink" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_n1"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvn1">

            <TextView
                android:id="@+id/text_n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N1"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_n2"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/layout_n1"
            app:layout_constraintTop_toTopOf="@+id/layout_n1">

            <TextView
                android:id="@+id/text_n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N2"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_n3"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/layout_n2"
            app:layout_constraintTop_toTopOf="@+id/layout_n2">

            <TextView
                android:id="@+id/text_n3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N3"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_angle"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toEndOf="@+id/layout_n3"
            app:layout_constraintTop_toTopOf="@+id/layout_n3">

            <TextView
                android:id="@+id/text_da"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="angle"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_shrink"
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginRight="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/layout_angle"
            app:layout_constraintTop_toTopOf="@+id/layout_angle">

            <TextView
                android:id="@+id/text_sh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shrink"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_back_colour"
            android:layout_width="@dimen/colour_button_w"
            android:layout_height="@dimen/colour_button_h"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@+id/layout_n3"
            app:layout_constraintTop_toTopOf="@+id/layout_fore_colour2">

            <TextView
                android:id="@+id/text_backcolour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_fore_colour1"
            android:layout_width="@dimen/colour_button_w"
            android:layout_height="@dimen/colour_button_h"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@+id/layout_n1"
            app:layout_constraintTop_toBottomOf="@+id/layout_n1">

            <TextView
                android:id="@+id/text_forecolour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foreground1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_fore_colour2"
            android:layout_width="@dimen/colour_button_w"
            android:layout_height="@dimen/colour_button_h"
            android:background="@android:color/holo_blue_dark"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="@+id/layout_n2"
            app:layout_constraintTop_toTopOf="@+id/layout_fore_colour1">


            <TextView
                android:id="@+id/text_forecolour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foreground2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:background="@android:color/white"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/layout_fore_colour1"
            app:layout_constraintTop_toBottomOf="@+id/layout_fore_colour2">

            <ImageView
                android:id="@+id/edit_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_weight="1"
                android:contentDescription="@string/edit_settings"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/random_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/draw_random"
                app:srcCompat="@android:drawable/ic_menu_help" />

            <ImageView
                android:id="@+id/evolve_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/evolve_mode"
                app:srcCompat="@drawable/eight_points" />

            <ImageView
                android:id="@+id/pause_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/pause_animation"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageView
                android:id="@+id/resume_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/resume_animation"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/share_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/share_pattern"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_weight="1"
                android:contentDescription="@string/app_info"
                app:srcCompat="@android:drawable/ic_menu_info_details" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

