<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp">


        <EditText
            android:id="@+id/line_thickness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/line_thickness_hint"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/size_pricker"
            app:layout_constraintStart_toStartOf="@+id/size_pricker"
            app:layout_constraintTop_toBottomOf="@+id/size_pricker" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/bitmap_size"
            app:layout_constraintBottom_toBottomOf="@+id/size_pricker"
            app:layout_constraintEnd_toStartOf="@+id/size_pricker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/size_pricker" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/line_style"
            app:layout_constraintBottom_toBottomOf="@+id/line_thickness"
            app:layout_constraintEnd_toStartOf="@+id/line_thickness"
            app:layout_constraintTop_toTopOf="@+id/line_thickness" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/line_thickness"
            app:layout_constraintBottom_toBottomOf="@+id/line_style"
            app:layout_constraintEnd_toStartOf="@+id/line_style"
            app:layout_constraintTop_toTopOf="@+id/line_style" />

        <EditText
            android:id="@+id/line_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="@string/line_style_hint"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/line_thickness"
            app:layout_constraintStart_toStartOf="@+id/line_thickness"
            app:layout_constraintTop_toBottomOf="@+id/line_thickness" />

        <NumberPicker
            android:id="@+id/size_pricker"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

